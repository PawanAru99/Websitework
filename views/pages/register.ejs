<%- include('../partials/head') %>
    <%- include('../partials/header') %>

        <body>
            <div class="container">
                <div class="card" id="registerpage">
                    <!-- <div class="wrapper mt-5"> -->
                    <div class="col-12">
                        <div class="row">
                            <div class="title"><span>Register</span></div>
                            <form action="/register" method="post">
                                <div class="row mb-3">
                                    <label for="Shalarth ID">Shalarth ID</label>
                                    <!-- <div class="col-md-1"><i class="fas fa-lock"></i></div> -->
                                    <div class="col-md-12"><input type="text" class="form-control" id="Shalarth_ID" name="Shalath_ID"
                                            placeholder="Shalarth ID" required></div>
                                </div>
                                <div class="row mb-3">
                                    <label for="email">Email Address</label>
                                    <!-- <div class="col-md-1"><i class="fas fa-lock"></i></div> -->
                                    <div class="col-md-12"><input type="email" class="form-control" id="email" name="email"
                                            placeholder="Email Address" required></div>
                                </div>
                                <div class="row mb-3">
                                    <label for="Phone number">Phone number</label>
                                    <!-- <div class="col-md-3"><i class="fas fa-user"></i></div> -->
                                    <div class="col-md-12"><input type="number" inputmode="tel" class="form-control" id="number" name="number"
                                            placeholder="Phone number" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="password">Password</label>
                                    <div class="col-md-12">
                                        <input type="password" class="form-control" id="password" name="password"
                                            placeholder="Password" required>
                                        </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="confirmpassword">Confirm Password</label>
                                    <!-- <div class="col-md-1"><i class="fas fa-lock"></i></div> -->
                                    <div class="col-md-12"><input type="password" class="form-control" id="confirmpassword" name="confirmpassword"
                                            placeholder=" Confirm Password" required></div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-12"><input type="submit" class="btn btn-primary btn-block"
                                            value="Register">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 text-center"> If Already Registered? <a
                                            href="/login">Login</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </body>

        <%- include('../partials/footer') %>